<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout

        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/homepage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical"
          >

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:id="@+id/tab_imgview1"
                style="@style/layout_vertical"
                android:background="@mipmap/home1"
                android:paddingBottom="0dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
         />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tab_text1"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="首  页"
                android:textColor="#000"
                android:alpha="0.5"
                android:textSize="16sp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
               />"

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondpage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:id="@+id/tab_imgview2"
                style="@style/layout_vertical"
                android:background="@mipmap/forest1"
                android:paddingBottom="0dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tab_text2"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="测 量"
                android:alpha="0.5"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="70dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdpage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:id="@+id/tab_imgview3"
                style="@style/layout_vertical"
                android:background="@mipmap/manage1"
                android:paddingBottom="0dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tab_text3"
                style="@style/layout_vertical"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="管  理"
                android:textColor="#000"
                android:alpha="0.5"
                android:textSize="16sp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
               />

        </LinearLayout>

        <LinearLayout 
            android:id="@+id/fourthpage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical"
         >

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:id="@+id/tab_imgview4"
                style="@style/layout_vertical"
                android:background="@mipmap/me1"
                android:paddingBottom="0dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tab_text4"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="我"
                android:textColor="#000"
                android:alpha="0.5"
                android:textSize="16sp"
                android:layout_width="70dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        
        
        
    </LinearLayout>

    <FrameLayout
        style="@style/layout_full"
        android:layout_above="@+id/l2_tab"
        android:id="@+id/ly_content">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/l2_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/ll_tab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentTop="true"
            android:background="#C7C7C7" />


    </LinearLayout>


</RelativeLayout>
