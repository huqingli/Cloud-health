<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/light_blue"
        android:fitsSystemWindows="true">
        <Button
            android:id="@+id/return_btn_validatepage"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"
            android:scaleX="0.3"
            android:scaleY="0.4"/>
        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:background="@drawable/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="填写验证码"
            android:textSize="20sp"
            android:textColor="@drawable/white"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我们已经发送了验证码到你的手机:"
        android:textColor="@drawable/dark_gray"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/tv_Phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+86 18950111314"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="30sp"
        android:textColor="@drawable/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@drawable/black"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/et_Code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:layout_marginLeft="15dp"
            android:maxLength="4"
            android:inputType="number"
            android:background="@null"/>
    </LinearLayout>
    <View
        android:layout_width="350sp"
        android:layout_height="1px"
        android:background="@drawable/light_blue"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/bt_resend"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/transparent"
        android:text="获取验证码"
        android:textColor="@drawable/text_btn_attribute"
        android:textSize="14sp" />
    <Button
        android:id="@+id/bt_nextstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:text="下一步"
        android:textColor="@drawable/bt_text_attribute"
        android:background="@drawable/bt_general_attribute"/>
</LinearLayout>