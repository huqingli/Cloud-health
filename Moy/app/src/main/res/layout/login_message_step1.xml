<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/title_color"
        android:fitsSystemWindows="true">
        <Button
            android:id="@+id/bt_login_message_step1_return"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"
            android:scaleX="0.3"
            android:scaleY="0.4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登录"
            android:textColor="@drawable/white"
            android:textSize="26sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="国家/地区"
            android:textSize="18sp"
            android:textColor="@drawable/black"/>
        <TextView
            android:id="@+id/tv_login_message_step1_countrycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_centerVertical="true"
            android:text="中国(+86)"
            android:textSize="18sp"
            android:textColor="@drawable/light_blue"/>
        <Button
            android:id="@+id/bt_login_message_step1_choosecountrycode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@drawable/light_blue"
            android:background="@drawable/bt_general_transparent"/>
        <View
            android:id="@+id/line_login_message_step1_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/gray"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tv_login_message_step1_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textSize="18sp"
            android:textColor="@drawable/black"/>
        <EditText
            android:id="@+id/et_login_message_step1_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请填写手机号"
            android:textColor="@drawable/light_blue"
            android:layout_toRightOf="@+id/tv_login_message_step1_phonenum"
            android:layout_toLeftOf="@+id/bt_login_message_step1_clear"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/transparent" />
        <Button
            android:id="@+id/bt_login_message_step1_clear"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="x"
            android:layout_centerVertical="true"
            android:background="@drawable/transparent"
            android:layout_alignParentRight="true" />
        <View
            android:id="@+id/line_login_message_step1_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/gray"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/bt_login_message_step1_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/shape2"/>
    </LinearLayout>

</LinearLayout>