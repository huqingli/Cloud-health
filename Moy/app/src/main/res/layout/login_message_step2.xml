<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:fitsSystemWindows="true"
        android:background="@color/title_color">
        <Button

            android:id="@+id/bt_login_message_step2_return"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back"
            android:scaleX="0.3"
            android:scaleY="0.4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登录"
            android:textColor="@drawable/white"
            android:textSize="26sp"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tv_login_message_step2_phonenumhint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textSize="16sp"
            android:textColor="@drawable/black"/>
        <TextView
            android:id="@+id/tv_login_message_step2_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_login_message_step2_phonenumhint"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@drawable/dark_gray"
            android:textSize="16sp"/>
        <View
            android:id="@+id/line_login_message_step1_line1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/gray"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/tv_login_message_step2_Vcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textSize="16sp"
            android:textColor="@drawable/black"/>
        <EditText
            android:id="@+id/et_login_message_step2_verificationcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请填写验证码"
            android:textSize="16sp"
            android:textColor="@drawable/light_blue"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/bt_login_message_step2_clear"
            android:layout_toRightOf="@+id/tv_login_message_step2_Vcode"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:background="@null" />
        <Button
            android:id="@+id/bt_login_message_step2_clear"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:hint="x"
            android:layout_centerVertical="true"
            android:background="@drawable/transparent"
            android:padding="5dp"
            android:layout_toLeftOf="@+id/bt_login_message_step2_getcode"/>

        <View
            android:id="@+id/line_login_message_step2_line2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/gray"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/bt_login_message_step2_getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_getcode"
            android:text="获取验证码"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/bt_login_message_step2_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/shape2"/>
    </LinearLayout>

</LinearLayout>