<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="#BF000000">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
        android:text="确认手机号码"
        android:textColor="@drawable/light_blue"
        android:textSize="26sp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="5px"
            android:layout_marginTop="20dp"
            android:background="@drawable/light_blue"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="我们将发送短信验证码到这个号码:"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_register_confirm_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="24dp"
            android:background="@drawable/dark_gray"/>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_register_confirm_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:text="取消"
                android:textColor="@drawable/white"
                android:textSize="20sp"
                android:background="@drawable/transparent"/>
            <View
                android:layout_width="5px"
                android:layout_height="50dp"
                android:background="@drawable/dark_gray"/>
            <Button
            android:id="@+id/bt_register_confirm_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:text="确定"
            android:textColor="@color/white"
            android:background="@drawable/transparent"
            android:textSize="20sp"/>
        </LinearLayout>
</LinearLayout>



