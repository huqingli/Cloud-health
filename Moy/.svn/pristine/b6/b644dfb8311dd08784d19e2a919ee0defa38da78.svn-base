<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:id="@+id/ll_tab"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:id="@+id/homepage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_imgview1"
                style="@style/layout_vertical"
                android:background="@drawable/tab_menu_bg"
                android:paddingBottom="0dp"
                android:layout_weight="2.5"
                android:src="@drawable/tab_menu_homepage"/>
            <TextView
                android:id="@+id/tab_text1"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="首  页"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="16sp"/>"
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/secondpage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_imgview2"
                style="@style/layout_vertical"
                android:background="@drawable/tab_menu_bg"
                android:paddingBottom="0dp"
                android:layout_weight="2.5"
                android:src="@drawable/tab_menu_secondpage"/>
            <TextView
                android:id="@+id/tab_text2"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="预  测"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="16sp"/>"
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/thirdpage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_imgview3"
                style="@style/layout_vertical"
                android:background="@drawable/tab_menu_bg"
                android:paddingBottom="0dp"
                android:layout_weight="2.5"
                android:src="@drawable/tab_menu_thirdpage"/>
            <TextView
                android:id="@+id/tab_text3"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="管  理"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="16sp"/>"
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/fourthpage"
            android:layout_weight="1"
            style="@style/layout_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_imgview4"
                style="@style/layout_vertical"
                android:background="@drawable/tab_menu_bg"
                android:paddingBottom="0dp"
                android:layout_weight="2.5"
                android:src="@drawable/tab_menu_fourthpage"/>
            <TextView
                android:id="@+id/tab_text4"
                style="@style/layout_vertical"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:gravity="center"
                android:text="我"
                android:textColor="@drawable/tab_menu_text"
                android:textSize="16sp"/>"
            
        </LinearLayout>
        
        
        
    </LinearLayout>
    
    <FrameLayout
        style="@style/layout_full"
        android:layout_above="@+id/ll_tab"
        android:id="@+id/ly_content">
        
    </FrameLayout>
    

</RelativeLayout>
